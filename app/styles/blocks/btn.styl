.btn
  box-sizing border-box
  width 100%
  height 50px
  border none
  font-size 1rem
  text-transform lowercase
  color inherit
  text-decoration none
  cursor pointer
  transition()

  &--sm
    height 40px

  &--accent
    border none
    border-radius 3px
    color $white
    background-color $pomegranate

    &:hover
      background-color darken($pomegranate, 20%)

  &--like
    border-right 1px solid $concrete
    padding-left 35px
    background $white url("../img/events/icon-like.png") calc(50% - 20px) 50% no-repeat

    &:hover
      color $pomegranate
      background-color $alabaster

  &--more
    color $pomegranate
    font-size 0.875rem
    text-transform uppercase

    &:hover
      background-color $alabaster

  &--normal
    border 1px solid $concrete
    background-color $alabaster
    font-size 0.9375rem
    text-transform uppercase

    &:hover
      background-color $concrete
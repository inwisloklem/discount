.categories
  border 1px solid $concrete
  background-color $rose-white

  &__wrapper
    container()

  &__list
    display flex
    justify-content space-between
    padding 25px 0

  &__link
    position relative
    color inherit
    text-decoration none
    transition()

    &:last-of-type
      margin-right 20px

    &:hover
      color $pomegranate

      .categories__icon
        fill $pomegranate

  &__icon
    position absolute
    top 50%
    right -20px
    transform translateY(-50%)
    transition()

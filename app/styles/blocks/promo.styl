.promo
  background url("../img/promo/bg-promo.jpg") 50%/1440px 400px no-repeat
  text-align center

  &__wrapper
    container()
    display flex
    flex-direction column
    justify-content flex-end
    align-items center
    min-height 400px
    height 100%

  &__title
    display inline-block
    padding 5px 20px
    margin-bottom 5px
    font-size 1.875rem
    color $white
    background-color $pomegranate

  &__search
    margin 35px 0
.user
  position relative
  max-width 166px
  width 100%

  &__link
    position absolute
    top -20px
    right 15px
    font-size 0.75rem
    color $gray
    text-decoration none
    transition()

    &:hover
      color $pomegranate

      .user__icon
        fill $pomegranate

  &__icon
    position absolute
    top 50%
    right -15px
    fill $gray
    transform translateY(-50%)
    transition()

  &__btn
    font-size 0.875rem
    text-transform uppercase
    height 40px
    padding-left 30px
    background $pomegranate url("../img/user/icon-user.png") 20px 50% no-repeat
